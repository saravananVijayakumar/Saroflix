    <h1>Login</h1>
<form action="/login" id =login autocomplete="off" method="POST">
    <input style="width: 300px ;" type="email" name="email" placeholder="Email" required>
    <br><br>
    <input style="width: 300px ;" type="password" name="password" placeholder="Password" pattern="(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,16}" title="Must contain minimum eight and maximum 16 characters, at least one uppercase letter, one lowercase letter, one number and one special character" required>
    <br><br>
    <button type="submit" class="btn btn-outline-success" id="span">Login</button>&emsp;&emsp;<button type="reset" class="btn btn-outline-warning">Clear</button>
</form>
