<%- include('layouts/header') -%>

<style>
    h1{
        margin-top: 1%;
        margin-left: 5%;
    }
    .size{
        font-size: 20px ;
        color: grey;
        opacity: 0.95;
    }

    .center{ 
        position: absolute;
        margin: 5% 0% 20% 5%;
        padding-left: 40px;
        padding-bottom: 66px;
    }
    hr{
        background-color: grey;
        opacity: 0.2;
    }
    .align{
    color: grey;
    opacity: 0.95;

    }

    .card{ 
        width: 350px;
        height: 140px;
        border: 0px solid hsl(185, 75%, 39%);
        border-radius: 16px 16px 0px 0px;
    }

    .align2{
        position: absolute;
        margin-left: 27%;
        margin-top: -13%;
    }

    .circleCard{
        width: 96px;
        height: 96px;
        margin-left: 22%;
        margin-bottom: -10%;
        border: 4px solid white;
        border-radius: 50%; 
    }
    #movedown{
        padding-top: 70px;
        padding-bottom: 10px;
    }
    .whiteSpace{
        width: 350px;
        height: 240px;
        background-color: white;
        border: 0px solid white;
        border-radius: 0px 0px 16.25px 16.25px;
    }
    
    </style>

      <h1>Welcome <strong><%= name %></strong></h1>

      <div class="center">
        <div class="align1">
        <img class = "card" src="./card.svg" alt="card">
        </div>
        <div class="align2">
            <img src="/uploads/images/<%= Image %>" alt="Image" class="circleCard">
        </div>
          
       
        <div class="whiteSpace">
                
            <div class="text-center" id="movedown">
                <span class="size"><strong><%= name %></strong></span>&emsp;<span class="size"><%= age %></span><br><br>
                <span class="size"><%= inPlace %></span>
            </div>
            <hr>    
        </div>


<%- include('layouts/footer') -%>